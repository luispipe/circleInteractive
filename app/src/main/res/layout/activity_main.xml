<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_yellow1"
        android:layout_width="96dp"
        android:layout_height="112dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="#FFEB3B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_blue1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008" />

    <Button
        android:id="@+id/btn_orange1"
        android:layout_width="101dp"
        android:layout_height="105dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="54dp"
        android:backgroundTint="#FF9800"
        app:layout_constraintBottom_toTopOf="@+id/tv_red2"
        app:layout_constraintEnd_toStartOf="@+id/tv_red1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_green2" />

    <Button
        android:id="@+id/btn_yellow2"
        android:layout_width="69dp"
        android:layout_height="74dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="78dp"
        android:backgroundTint="#FFEB3B"
        app:layout_constraintBottom_toTopOf="@+id/tv_red1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn_orange2"
        app:layout_constraintTop_toBottomOf="@+id/tv_blue1" />

    <Button
        android:id="@+id/btn_pink"
        android:layout_width="72dp"
        android:layout_height="79dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="113dp"
        android:backgroundTint="#E91E63"
        app:layout_constraintBottom_toTopOf="@+id/tv_green1"
        app:layout_constraintEnd_toStartOf="@+id/tv_red1"
        app:layout_constraintStart_toEndOf="@+id/tv_green2"
        app:layout_constraintTop_toBottomOf="@+id/btn_orange2" />

    <Button
        android:id="@+id/btn_orange2"
        android:layout_width="101dp"
        android:layout_height="105dp"
        android:layout_marginStart="106dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#FF9800"
        app:layout_constraintBottom_toTopOf="@+id/btn_pink"
        app:layout_constraintEnd_toStartOf="@+id/tv_blue1"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_yellow1" />

    <TextView
        android:id="@+id/tv_blue1"
        android:layout_width="133dp"
        android:layout_height="132dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="51dp"
        android:background="@drawable/circleblue_drawio"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/btn_yellow2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.827"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_green1"
        android:layout_width="133dp"
        android:layout_height="132dp"
        android:background="@drawable/circlegreen"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.942"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.813" />

    <TextView
        android:id="@+id/tv_red2"
        android:layout_width="82dp"
        android:layout_height="78dp"
        android:background="@drawable/circlered"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.892" />

    <TextView
        android:id="@+id/tv_green2"
        android:layout_width="82dp"
        android:layout_height="78dp"
        android:background="@drawable/circlegreen"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/tv_red2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_yellow1"
        app:layout_constraintVertical_bias="0.371" />

    <TextView
        android:id="@+id/tv_blue2"
        android:layout_width="82dp"
        android:layout_height="78dp"
        android:background="@drawable/circleblue_drawio"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.449"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.892" />

    <TextView
        android:id="@+id/tv_red1"
        android:layout_width="82dp"
        android:layout_height="78dp"
        android:background="@drawable/circlered"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.594" />
</androidx.constraintlayout.widget.ConstraintLayout>